{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Run chatbot_ui.py",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/chatbot_ui.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Streamlit (for debugpy)",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false
        }
    ]
}
